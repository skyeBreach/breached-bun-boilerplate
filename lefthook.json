{
    "pre-commit": {
        "parallel": true,
        "commands": {
            "markdownlint": {
                "glob": "*.{md,mdx}",
                "run": "bun run markdownlint-cli --dot {staged_files}"
            },
            "spellcheck": {
                "run": "bun run cspell --no-must-find-files {staged_files}"
            }
        }
    },
    "commit-msg": {
        "parallel": true,
        "scripts": {
            "commitlint.sh": {
                "runner": "bash"
            }
        }
    }
}
